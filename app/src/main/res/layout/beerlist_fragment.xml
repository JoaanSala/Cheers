<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingFragment"
    android:background="#78776A"
    android:orientation="vertical">

    <TextView
        android:id="@+id/beerListTitle"
        android:layout_width="match_parent"
        android:layout_height="375px"
        android:text="BEER LIST"
        android:fontFamily="@font/olympus_mount"
        android:textSize="70dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="@drawable/beertitle_border"
        android:layout_marginBottom="1dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/beerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="750px"
        android:layout_weight="8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/beerRecyclerView"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical">

        <Button
            android:id="@+id/leftPage"
            android:layout_width="100px"
            android:layout_height="90px"
            android:background="@drawable/left_arrow_w"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/beerPage"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="1"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"/>

        <Button
            android:id="@+id/rightPage"
            android:layout_width="100px"
            android:layout_height="90px"
            android:background="@drawable/right_arrow_w"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</LinearLayout>